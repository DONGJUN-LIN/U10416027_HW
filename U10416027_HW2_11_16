//import java api
import java.util.Scanner;
import java.util.ArrayList;

//main class
public class RepeatAdditionQuiz{
	//main method
	public static void main(String[] args){
		//import scanner
		Scanner scan = new Scanner(System.in);
		
		//creat arraylist object
	    ArrayList array = new ArrayList();
		
		//data fields
		int ans;
		int num1 = (int)(Math.random() * 10);
		int num2 = (int)(Math.random() * 10);

		//ask the user what is the answer
		System.out.println("What is the answer " +num1+ " + " +num2+ " is ?" );
		
		//enter answer
		ans = scan.nextInt();
		
		//add number to the arraylist
		array.add(ans);

		//judge the answer is correct or not
		while(num1 + num2 != ans){
			System.out.println("錯了, 再輸入一次");
			ans = scan.nextInt();
			
			//judge the integer is already entered or not
			while(array.contains(ans) == true){
				System.out.println("你已經輸入過 " + ans + " 了");
				ans = scan.nextInt();
			}
			array.add(ans);
		}
		//answer is correct
		System.out.println("答對了!!");
	}
}
